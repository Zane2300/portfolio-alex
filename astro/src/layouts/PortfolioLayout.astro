---
import "../styles/global.css";

const {
    title = "Alex Rosell â€“ Portfolio",
    description = "Cybersecurity, DevOps & Audiovisual portfolio.",
} = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        
        <title>{title}</title>
        <meta name="description" content={description} />

        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    </head>

    <body class="min-h-screen bg-bg text-text antialiased">
        <!-- NAVBAR -->
        <header class="sticky top-0 z-50 border-b border-border-subtle bg-bg-elevated/95 backdrop-blur">
            <div class="mx-auto flex max-w-6xl items-center justify-between px-4 py-4">
                <slot name="navbar" />
            </div>
        </header>

        <!-- CONTENT -->
        <main class="mx-auto max-w-6xl px-4 py-16 space-y-32">
            <slot />
        </main>

        <!-- FOOTER -->
        <footer class="mt-32 border-t border-border-subtle">
            <div class="mx-auto max-w-6xl px-4 py-10 text-sm text-text-muted">
                <slot name="footer" />
            </div>
        </footer>
    </body>
</html>