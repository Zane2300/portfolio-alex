---
const contact = {
    email: "alexrosell2003@gmail.com",
    phone: "+34 694 41 48 36",
    location: "Burriana, Spain",
    github: "https://github.com/Zane2300",
    linkedin: "https://www.linkedin.com/in/alex-rosell-angullo/",
};
---

<section id="contact" class="scroll-mt-32">
    <div class="w-full md:max-w-3xl space-y-6">
        
        <!-- LABEL -->
        <h2 class="flex items-center gap-3 text-3xl md:text-4xl font-semibold">

            <svg 
                class="w-7 h-7 text-primary"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
            >
                <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                <path d="M20 6v12a2 2 0 0 1 -2 2h-10a2 2 0 0 1 -2 -2v-12a2 2 0 0 1 2 -2h10a2 2 0 0 1 2 2z" />
                <path d="M10 16h6" />
                <path d="M13 11m-2 0a2 2 0 1 0 4 0a2 2 0 1 0 -4 0" />
                <path d="M4 8h3" />
                <path d="M4 12h3" />
                <path d="M4 16h3" />
            </svg>
            Contact
        </h2>
        
        <p>Let&apos;s work together!</p>
        
        <!-- BUTTONS -->
        <div class="flex flex-wrap items-center gap-4 pt-2">
            
            <!-- Email (primary) -->
            <a
                href={`mailto:${contact.email}`}
                class="inline-flex items-center gap-2 rounded-full bg-primary px-4 py-2 text-sm font-medium text-bg hover:bg-primary-light transition-colors"
            >
                <svg
                    class="w-5 h-5"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke="currentColor"
                    stroke-width="2"
                >
                    <rect x="3" y="5" width="18" height="14" rx="2" ry="2" />
                    <path d="M3 7l9 6l9-6" />
                </svg>
                <span>Email me</span>
            </a>

            <!-- LinkedIn (secondary) -->
            <a
                href={contact.linkedin}
                target="_blank"
                rel="noreferrer"
                class="inline-flex items-center gap-2 rounded-full border border-bg-selection px-4 py-2 text-sm font-medium text-text-muted hover:border-primary hover:text-primary transition-colors"
            >
                <svg
                    class="w-5 h-5"
                    fill="currentColor"
                    viewBox="0 0 24 24"
                >
                    <path d="M19 0h-14c-2.76 0-5 2.24-5 5v14c0 2.76 2.24 5 5 5h14c2.76 0 5-2.24 5-5v-14c0-2.76-2.24-5-5-5zm-11 19h-3v-10h3v10zm-1.5-11.27c-.96 0-1.73-.79-1.73-1.76s.77-1.76 1.73-1.76 1.73.79 1.73 1.76-.77 1.76-1.73 1.76zm13.5 11.27h-3v-5.6c0-1.34-.03-3.06-1.87-3.06-1.87 0-2.16 1.46-2.16 2.96v5.7h-3v-10h2.88v1.36h.04c.4-.76 1.37-1.56 2.82-1.56 3.01 0 3.57 1.98 3.57 4.55v5.65z" />
                </svg>
                <span>LinkedIn</span>
            </a>
        </div>

        <!-- CONTACT DETAILS LIST -->
        <div class="space-y-2 pt-4 text-sm md:text-base">
            <div class="flex items-center gap-3">
                <span class="text-text-muted w-20 uppercase tracking-[0.18em] text-xs">
                    Email
                </span>
                <a
                    href={`mailto:${contact.email}`}
                    class="hover:text-primary transition-colors break-all"
                >
                    {contact.email}
                </a>
            </div>

            <div class="flex items-center gap-3">
                <span class="text-text-muted w-20 uppercase tracking-[0.18em] text-xs">
                    Phone
                </span>
                <a
                    href={`tel:${contact.phone.replace(/ /g, "")}`}
                    class="hover:text-primary transition-colors"
                >
                    {contact.phone}
                </a>
            </div>

            <div class="flex items-center gap-3">
                <span class="text-text-muted w-20 uppercase tracking-[0.18em] text-xs">
                    Location
                </span>
                <span>{contact.location}</span>
            </div>

            <div class="flex items-center gap-3">
                <span class="text-text-muted w-20 uppercase tracking-[0.18em] text-xs">
                    GitHub
                </span>
                <a
                    href={contact.github}
                    target="_blank"
                    rel="noreferrer"
                    class="hover:text-primary transition-colors break-all"
                >
                    {contact.github}
                </a>
            </div>
        </div>
    </div>
</section>
