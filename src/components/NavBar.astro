---
import ThemeToggle from "./ThemeToggle.svelte";

const links = [
    { href: "#home", label: "Home" },
    { href: "#experience", label: "Experience" },
    { href: "#projects", label: "Projects" },
    { href: "#about", label: "About" },
    { href: "#skills", label: "Skills" },
    { href: "#education", label: "Education" },
    { href: "#contact", label: "Contact" }
];
---

<nav class="mx-auto max-w-6xl px-4 py-4 flex justify-center">
    <div class="backdrop-blur-lg bg-bg-elevated/60 border border-bg-selection px-8 py-3 shadow-lg shadow-black/10 flex items-center gap-10 rounded-full">
        <!-- NAME / LOGO -->
        <a href="#home" class="text-sm font-semibold text-text hover:text-primary transition-colors">
            Alex
        </a>

        <!-- Links -->
        <ul class="flex items-center gap-8 text-sm font-medium text-text-muted">
            {links.map((link) => (
                <li>
                    <a href={link.href} class="hover:text-primary transition-colors">
                        {link.label}
                    </a>
                </li>
            ))}
        </ul>

        <!-- RIGHT: Theme toggle -->
        <div class="ml-4">
            <ThemeToggle client:load />
        </div>
    </div>
</nav>

