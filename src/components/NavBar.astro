---
import ThemeToggle from "./ThemeToggle.svelte";
import LanguageToggle from "./LanguageToggle.svelte";

const { lang, t } = Astro.props;

const links = [
  { href: "#home", label: t.home },
  { href: "#experience", label: t.experience },
  { href: "#projects", label: t.projects },
  { href: "#about", label: t.about },
  { href: "#skills", label: t.skills },
  { href: "#education", label: t.education },
  { href: "#contact", label: t.contact },
];
---

<nav class="mx-auto max-w-6xl px-4 py-4 flex justify-center">
    <div
        class="backdrop-blur-lg bg-bg-elevated/60 border border-bg-selection
            px-4 md:px-8 py-3 shadow-lg shadow-black/10
            flex items-center gap-4 md:gap-8
            rounded-full max-w-full w-full"
    >
        <!-- NAME / LOGO -->
        <a
        href="#home"
        class="text-sm font-semibold text-text hover:text-primary transition-colors"
        >
        Alex
        </a>

        <!-- LINKS
            - ocultos solo en móviles muy pequeños (<640): hidden sm:flex
            - permiten varias filas: flex-wrap
            - centrados entre logo y toggles: flex-1 justify-center
        -->
        <ul
        class="hidden sm:flex flex-1 flex-wrap items-center justify-center
                gap-x-6 gap-y-1 text-sm font-medium text-text-muted"
        >
        {links.map((link) => (
            <li>
            <a href={link.href} class="hover:text-primary transition-colors">
                {link.label}
            </a>
            </li>
        ))}
        </ul>

        <!-- RIGHT: Language switch + Theme toggle -->
        <div class="ml-auto flex items-center gap-3">
            <LanguageToggle lang={lang} client:load />
            <ThemeToggle client:load />
        </div>
    </div>
</nav>

