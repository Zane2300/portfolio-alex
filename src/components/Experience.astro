---
import type { ExperienceItem } from "../i18n/translations";
const { t } = Astro.props;
---
<section id="experience" class="scroll-mt-32">
    <h2 class="flex items-center mb-6 text-3xl font-semibold gap-x-3">
        <svg 
            class="w-7 h-7 text-primary"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
            stroke-width="2"

        >
            <path stroke="none" d="M0 0h24v24H0z" fill="none" />
            <path d="M22 13.478v4.522a3 3 0 0 1 -3 3h-14a3 3 0 0 1 -3 -3v-4.522l.553 .277a20.999 20.999 0 0 0 18.897 -.002l.55 -.275zm-8 -11.478a3 3 0 0 1 3 3v1h2a3 3 0 0 1 3 3v2.242l-1.447 .724a19.002 19.002 0 0 1 -16.726 .186l-.647 -.32l-1.18 -.59v-2.242a3 3 0 0 1 3 -3h2v-1a3 3 0 0 1 3 -3h4zm-2 8a1 1 0 0 0 -1 1a1 1 0 1 0 2 .01c0 -.562 -.448 -1.01 -1 -1.01zm2 -6h-4a1 1 0 0 0 -1 1v1h6v-1a1 1 0 0 0 -1 -1z" />
        </svg>
        {t.title}
    </h2>

    <ol class="relative mt-16">
        {t.items.map((item: ExperienceItem) => (
            <li class="relative">
                <div class="relative mx-12 pb-12 grid before:absolute before:left-[-35px] before:top-[5px] before:block before:h-full before:w-px before:bg-bg-selection md:grid-cols-5 md:gap-10 md:space-x-4">
                    <!-- LEFT COLUMN -->
                    <div class="relative pb-12 md:col-span-2">
                        <div class="sticky top-0">
                            <span class="absolute -left-[42px] top-[42px] w-4 h-4 rounded-full bg-primary" />

                            <h3 class="text-lg font-semibold text-primary">{item.role}</h3>
                            <h4 class="font-medium">{item.company}</h4>
                            <time class="block text-sm text-text-muted mt-1">{item.period}</time>
                        </div>
                    </div>

                    <!-- RIGHT COLUMN -->
                    <div class="relative flex flex-col gap-2 md:col-span-3">
                        {item.description}
                    </div>
                </div>
            </li>
        ))}
    </ol>
</section>