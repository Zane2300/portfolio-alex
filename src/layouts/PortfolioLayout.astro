---
import "../styles/global.css";

const {
    title = "Alex Rosell â€“ Portfolio",
    description = "Cybersecurity, DevOps & Audiovisual portfolio built in Astro.",
    lang = "en",
} = Astro.props;
---

<!DOCTYPE html>
<html lang={lang} class="dark">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <meta name="generator" content={Astro.generator} />
        
        <title>{title}</title>
        <meta name="description" content={description} />

        <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Onest:wght@100..900&display=swap" />
    </head>

    <body class="min-h-screen bg-bg text-text antialiased">
        <!-- NAVBAR -->
        <header class="sticky top-0 z-50">
            <slot name="navbar" />
        </header>

        <!-- MAIN CONTENT -->
        <main class="mx-auto max-w-6xl px-4 py-16 space-y-32">
            <slot />
        </main>

        <!-- FOOTER -->
        <footer class="mt-32 border-t border-bg-selection text-text-muted">
            <div class="mx-auto max-w-6xl px-4 py-10 text-sm">
                <slot name="footer" />
            </div>
        </footer>
    </body>
</html>
